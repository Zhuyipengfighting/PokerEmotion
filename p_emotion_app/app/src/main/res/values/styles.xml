<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 未点击文字样式 -->
    <style name="BottomItemClickTextStyle" >
        <item name="android:textSize">15sp</item>
    </style>
    <style name="BottomItemUnClickTextStyle" >
        <item name="android:textSize">15sp</item>
    </style>

    <!-- home页面顶部导航栏 -->
    <style name="BottomItemTextUnClickTextStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomItemTextClickTextStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="CustomDateTimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- 自定义按钮颜色 -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <!-- 自定义日历视图颜色 -->
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyTextViewBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>

