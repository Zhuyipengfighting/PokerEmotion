<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/Fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Bottom_menu_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_color_state"
        app:itemTextColor="@color/gray"
        app:menu="@menu/main_bottom_menu"
        app:itemTextAppearanceActive="@style/BottomItemTextClickTextStyle"
        app:itemTextAppearanceInactive="@style/BottomItemTextUnClickTextStyle"
        app:itemActiveIndicatorStyle="@style/BottomItemUnClickTextStyle"/>

</LinearLayout>